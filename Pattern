//WAP to display a pattern

#include<stdio.h>
#include<conio.h>
void main()
{
int i,j;
clrscr();
for(i=65;i<=70;i++)
{
printf("\n");
for(j=65;j<=i;j++)
{
printf("%c",j);
}
getch();
}
}

/*
Output

A                                                                               
AB                                                                              
ABC                                                                             
ABCD                                                                            
ABCDE                                                                           
ABCDEF */
